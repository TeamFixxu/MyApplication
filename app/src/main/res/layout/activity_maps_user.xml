<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity_user">

    <!-- 맵 -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageButton
            android:id="@+id/setup_Button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="top|end"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/set_wheel_button" />

        <ImageButton
            android:id="@+id/help_list_Button"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="top|end"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/help_list_button" />

    </LinearLayout>

    <!-- Bottom Sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/round_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="false">

        <!-- 드래그 핸들 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text="핀 변경 및 삭제"
                android:textSize="24sp"
                android:textColor="#444444"
                android:lineHeight="28.64dp"
                android:fontFamily="@font/pretendard_extrabold"/>
        </FrameLayout>
        <!-- 버튼 레이아웃 -->
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <!-- 버튼들 -->
            <Button
                android:id="@+id/pin_crash"
                android:background="@drawable/button_not_pressed"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:paddingVertical="0dp"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:textSize="20sp"
                android:textColor="#444444"
                android:fontFamily="@font/pretendard_extrabold"
                android:text="고장"/>

            <Button
                android:id="@+id/pin_lost"
                android:background="@drawable/button_not_pressed"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="20sp"
                android:textColor="#444444"
                android:fontFamily="@font/pretendard_extrabold"
                android:paddingVertical="0dp"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:layout_marginLeft="10dp"
                android:text="분실물"/>

            <Button
                android:id="@+id/pin_work"
                android:background="@drawable/button_not_pressed"

                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="20sp"
                android:textColor="#444444"
                android:fontFamily="@font/pretendard_extrabold"
                android:paddingVertical="0dp"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:layout_marginLeft="10dp"
                android:text="공사중"/>

            <Button
                android:id="@+id/pin_help"
                android:background="@drawable/button_not_pressed"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="20sp"
                android:textColor="#444444"
                android:fontFamily="@font/pretendard_extrabold"
                android:paddingVertical="0dp"
                android:paddingHorizontal="10dp"
                android:minWidth="0dp"
                android:layout_marginLeft="10dp"
                android:text="도움 필요"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/addTagButton"
                android:background="@drawable/button_not_pressed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"
                android:textSize="15sp"
                android:textColor="@color/default_textColor"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:fontFamily="@font/pretendard_extrabold"
                android:paddingVertical="0dp"
                android:paddingHorizontal="0dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_weight="1"
                android:id="@+id/pin_recyclerview"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_spinner"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소   :  "
                android:textSize="20sp"
                android:fontFamily="@font/pretendard_extrabold"
                android:layout_marginLeft="20dp"
                />

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/장소"
                />
        </LinearLayout>


        <!-- 이미지 버튼 -->

        <!-- 상세 내용 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            >
            <Button
                android:id="@+id/image_button"
                style="@style/CustomButtonStyle"
                android:layout_width="319dp"
                android:layout_height="200dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/pretendard_extrabold"
                android:text="사진 촬영"
                android:textColor="#FAFAFA"
                android:textSize="24sp"
                android:backgroundTint="#A0A0A0"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image"
                android:layout_width="319dp"
                android:layout_height="200dp"
                app:shapeAppearanceOverlay="@style/CustomImageButtonStyle"
                />

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <EditText
                android:id="@+id/detail_edit"
                android:hint="클릭하여 상세 내역을 입력하세요"
                android:gravity="top|left"
                android:layout_width="319dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:paddingLeft="25dp"
                android:paddingTop="35dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#D9D9D9"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세 내역"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/pretendard_extrabold"
                android:visibility="visible"/>

        </FrameLayout>

        <!-- 업로드 버튼 -->
        <Button
            android:id="@+id/upload"
            android:text="업로드 하기"
            android:layout_width="339dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="#2858FF"
            android:background="@drawable/round_button"
            android:fontFamily="@font/pretendard_extrabold"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>